<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.user.name %>:</strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>

    <% if can? :destroy, comment %>
      <%= link_to 'Delete', [comment.blog, comment],
                  method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
    <% end %>

  </article>
</div>